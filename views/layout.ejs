<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
    <head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%=pageTitle%></title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/mobile.css" media="screen and (max-width : 568px)">
	<link rel="shortcut icon" type="image/png" href="/images/icons/icon-mustache.png"/>
	<script type="text/javascript" src="/js/mobile.js"></script>
    </head>
    <body>
	<div id="header">
	    <a href="/" class="logo">
		<img src="/images/logo.jpg" alt="">
	    </a>
		<% if (locals.user) { %>
		 <h2>Welcome to Mustacchio, <%= locals.user.firstname %>!</h2>
		<% } %>
	    <ul id="navigation">
		<li class="<%- path === '/' ? 'selected' : ''%>">
		    <a href="/">home</a>
		</li>
		<li class="<%- path.includes('about') ? 'selected' : ''%>">
		    <a href="/about">about</a>
		</li>
		<li class="<%- path.includes('styles') ? 'selected' : ''%>">
		    <a href="/styles">gallery</a>
		</li>
		<% if (locals.isLoggedIn) { %>
			<li class="<%- path.includes('favoritestyles') ? 'selected' : ''%>">
				<a href="/favoritestyles">favorite styles</a>
			</li>
		<% } %>	
		<li class="<%- path.includes('blog') ? 'selected' : ''%>">
		    <a href="/blog">blog</a>
		</li>
		<li class="<%- path === '/contacts/new' ? 'selected' : ''%>">
		    <a href="/contacts/new">contact</a>
		</li>
		<% if (locals.user && locals.user.admin) { %>
			<li class="<%- path === '/contacts' ? 'selected' : ''%>">
				<a href="/contacts">contact requests</a>
			</li>
		<% } %>
		
		<% if (!locals.isLoggedIn) { %>
			<li class="<%- path === '/login' ? 'selected' : ''%>">
				<a href="/login">login</a>
			</li>
		<% } else {%>		
		<li class="<%- path === '/logout' ? 'selected' : ''%>">
		    <a href="/logout">logout</a>
		</li>
		<% } %>
	    </ul>
	</div>
	<div id="body">
	    <%- body %>
	</div>
	<div id="footer">
	    <%- include('partials/social.ejs') %>
	</div>
    </body>
</html>
